{% extends 'base.html.twig' %}

{% block main %}
    {% for article in articles %}
        <div class="container body-content">
            <div class="row">
                <div class="col-md-12">
                    <article>
                        <header>
                            <h2>{{ article.title }}</h2>
                        </header>

                        <div>
                            <img src="{{ article.getImageUrl }}" width="400px">
                        </div>

                        <p>
                            {{ article.content }}
                        </p>

                        <footer>
                            <div class="pull-right">
                                <a class="btn btn-danger btn-xs" href="{{ path('article_delete', {'id':article.id}) }}">delete
                                    &raquo;</a>
                                <a class="btn btn-warning btn-xs" href="{{ path('article_edit', {'id':article.id}) }}">edit
                                    &raquo;</a>
                                <a class="btn btn-default btn-xs" href="{{ path('blog_index') }}">back &raquo;</a>
                            </div>
                        </footer>
                    </article>
                </div>
            </div>
        </div>
        <hr/>
    {% endfor %}
{% endblock %}

